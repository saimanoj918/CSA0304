#include <stdio.h>
#define SIZE 10

int parent[SIZE];

int find(int i) {
    while(parent[i]) i = parent[i];
    return i;
}

int uni(int i, int j) {
    if(i != j) {
        parent[j] = i;
        return 1;
    }
    return 0;
}

int main() {
    int cost[SIZE][SIZE], n, edges=1, min, a, b, u, v, total=0;
    printf("Enter number of vertices: ");
    scanf("%d", &n);
    printf("Enter cost matrix:\n");
    for(int i=0; i<n; i++)
        for(int j=0; j<n; j++)
            scanf("%d", &cost[i][j]);
    while(edges < n) {
        min = 999;
        for(int i=0; i<n; i++)
            for(int j=0; j<n; j++)
                if(cost[i][j] && cost[i][j] < min) {
                    min = cost[i][j];
                    a = u = i;
                    b = v = j;
                }
        u = find(u);
        v = find(v);
        if(uni(u, v)) {
            printf("Edge %d: (%d,%d) cost=%d\n", edges++, a, b, min);
            total += min;
        }
        cost[a][b] = cost[b][a] = 999;
    }
    printf("Total cost = %d\n", total);
}
